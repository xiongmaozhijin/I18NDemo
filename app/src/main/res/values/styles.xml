<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <declare-styleable name="CustomTitleView">
        <attr name="color_res_id_parent" format="reference|color" />
        <attr name="txt_tv_title" format="reference|string" />
        <attr name="img_res_id_ibtn_left" format="reference" />
        <attr name="img_res_id_ibtn_right" format="reference" />
        <attr name="txt_btn_left" format="reference|string" />
        <attr name="txt_btn_right" format="reference|string" />
    </declare-styleable>

    <style name="animation_btm_in_btm_out" parent="android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/trans_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/trans_bottom_out</item>
    </style>

    <style name="DefaultDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <style name="DefaultDialog.BottomInBottomOut" parent="DefaultDialog">
        <item name="android:windowAnimationStyle">@style/animation_btm_in_btm_out</item>
    </style>

</resources>
